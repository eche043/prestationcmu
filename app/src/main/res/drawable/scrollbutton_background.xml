<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- État sélectionné (quand le bouton est cliqué) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <!-- Bordure partout sauf en bas -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- Bordure noire -->

            <padding
                android:left="2dp"
                android:top="0dp"
                android:right="2dp"
                android:bottom="0dp"/>
        </shape>
    </item>

    <!-- État normal (sans bordure en bas) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <!-- Bordure partout saf en bas -->
            <stroke android:width="1dp" android:color="@color/light_smoke"/> <!-- Bordure noire -->

            <padding
                android:left="2dp"
                android:top="0dp"
                android:right="2dp"
                android:bottom="0dp"/>
        </shape>
    </item>
</selector>
