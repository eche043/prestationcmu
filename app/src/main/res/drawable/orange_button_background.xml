<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Couleur de fond orange -->
    <solid android:color="#FF9500" />

    <!-- Coins arrondis -->
    <corners android:radius="8dp" />

    <!-- Bordure optionnelle -->
    <stroke
        android:width="1dp"
        android:color="#E6850E" />

    <!-- Effet d'ombre -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

</shape>