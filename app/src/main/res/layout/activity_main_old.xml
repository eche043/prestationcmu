<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FCFF"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/app_bar_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CNAM-CMU"
                android:textColor="#000"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/logo_container"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal|center_vertical"
                app:cardCornerRadius="140dp"
                app:cardElevation="0dp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:id="@+id/logoXmarks"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/logo_cnam"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/logo_container"
                android:background="#000"
                android:backgroundTint="#000" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
            <LinearLayout
                android:id="@+id/user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bonjour,"
                    android:textColor="#000" />
                <TextView
                    android:id="@+id/app_bar_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diakite Ousmane"
                    android:textColor="#000"
                    android:fontFamily="@font/poppins_bold"
                    android:textStyle="bold"
                    android:layout_marginTop="-6dp"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


    <ScrollView
        android:id="@+id/action_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Me faire enrôler -->
            <androidx.cardview.widget.CardView
                android:id="@+id/enroll_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="#00A5EA">
                    <androidx.cardview.widget.CardView
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        app:cardCornerRadius="140dp"
                        app:cardElevation="0dp"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/add_icon" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Me faire"
                            android:textColor="#fff"
                            android:fontFamily="@font/poppins_bold"
                            android:textStyle="bold"
                            android:alpha=".8"
                            android:textSize="16sp"
                            android:layout_marginBottom="-8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enrôler"
                            android:textColor="#fff"
                            android:fontFamily="@font/poppins_bold"
                            android:textStyle="bold"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <!-- Ayants droits -->
            <androidx.cardview.widget.CardView
                android:id="@+id/listHaveRights"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="#1E4E62">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Liste de mes"
                        android:textColor="#fff"
                        android:fontFamily="@font/poppins_bold"
                        android:textStyle="bold"
                        android:alpha=".8"
                        android:textSize="16sp"
                        android:layout_marginBottom="-8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ayants droits"
                        android:textColor="#fff"
                        android:fontFamily="@font/poppins_bold"
                        android:textStyle="bold"
                        android:textSize="24sp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:id="@+id/rightreceivers_progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="center"
                            android:indeterminate="false"
                            android:max="100"
                            android:minHeight="50dp"
                            android:minWidth="200dp"
                            android:progress="1"/>

                        <TextView
                            android:id="@+id/rightreceivers_empty_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="Aucun ayant droit"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="gone"/>

                        <HorizontalScrollView
                            android:id="@+id/rightreceivers_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">
                            <LinearLayout
                                android:id="@+id/rightreceivers_block"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="6dp"
                                android:divider="@drawable/space_item"
                                android:showDividers="middle">
                            </LinearLayout>

                        </HorizontalScrollView>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <!-- Suivre mon enrolement -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:id="@+id/status">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="#41A62A">
                    <androidx.cardview.widget.CardView
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        app:cardCornerRadius="140dp"
                        app:cardElevation="0dp"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/follow_icon" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Suivre mon"
                            android:textColor="#fff"
                            android:fontFamily="@font/poppins_bold"
                            android:textStyle="bold"
                            android:alpha=".8"
                            android:textSize="16sp"
                            android:layout_marginBottom="-8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enrôlement"
                            android:textColor="#fff"
                            android:fontFamily="@font/poppins_bold"
                            android:textStyle="bold"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <!-- Poser une reclamation -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="#EE7E02">
                    <androidx.cardview.widget.CardView
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        app:cardCornerRadius="140dp"
                        app:cardElevation="0dp"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:id="@+id/main_logo"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/write_icon" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Poser une"
                            android:textColor="#fff"
                            android:fontFamily="@font/poppins_bold"
                            android:textStyle="bold"
                            android:alpha=".8"
                            android:textSize="16sp"
                            android:layout_marginBottom="-8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Réclamation"
                            android:textColor="#fff"
                            android:fontFamily="@font/poppins_bold"
                            android:textStyle="bold"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Enroler un tiers -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/thirdEnroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="#00A5EA">
                    <androidx.cardview.widget.CardView
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        app:cardCornerRadius="140dp"
                        app:cardElevation="0dp"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/add_icon" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enrôler"
                            android:textColor="#fff"
                            android:fontFamily="@font/poppins_bold"
                            android:textStyle="bold"
                            android:alpha=".8"
                            android:textSize="16sp"
                            android:layout_marginBottom="-8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Un tiers"
                            android:textColor="#fff"
                            android:fontFamily="@font/poppins_bold"
                            android:textStyle="bold"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>