<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".views.LoginFingerprintActivity">

    <!-- En-tête -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connexion par empreinte"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="24dp" />

    <!-- Instruction -->
    <TextView
        android:id="@+id/textInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veuillez vous identifier avec votre empreinte digitale"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp" />

    <!-- Image d'empreinte -->
    <ImageView
        android:id="@+id/imageFingerprint"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_empreinte"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="Empreinte digitale" />

    <!-- Message de statut -->
    <TextView
        android:id="@+id/textStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Placez votre doigt sur le capteur pour vous identifier"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp" />

    <!-- Bouton de vérification -->
    <Button
        android:id="@+id/btnVerifyFingerprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vérifier empreinte"
        android:layout_marginTop="32dp" />

</LinearLayout>