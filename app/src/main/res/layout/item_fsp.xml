<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_border"
    android:elevation="10dp">

    <LinearLayout
        android:id="@+id/leftColumn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightColumn"
        android:layout_marginEnd="8dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtTypeSoinOld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autre feuilles "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtTransactionNumberOld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÂ° Transaction :"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/rightColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <ImageView
            android:id="@+id/imgAction"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:src="@drawable/img"
            android:contentDescription="Action"
            android:scaleType="centerCrop"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>