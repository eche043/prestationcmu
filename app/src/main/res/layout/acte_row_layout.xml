<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
    android:layout_marginTop="8dp">

    <AutoCompleteTextView
        android:id="@+id/champCodeActeAdditional"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="30"
        android:layout_marginEnd="4dp"
        android:hint="Code acte"
        android:padding="4dp"
        android:completionThreshold="1"
        android:background="@android:drawable/edit_text" />

    <EditText
        android:id="@+id/champDesignationAdditional"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="45"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:hint="Désignation"
        android:padding="4dp"
        android:enabled="false"
        android:background="@android:drawable/edit_text" />

    <EditText
        android:id="@+id/champQuantiteAdditional"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="10"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:hint="1"
        android:text="1"
        android:inputType="number"
        android:padding="4dp"
        android:background="@android:drawable/edit_text" />

    <!-- Bouton de suppression modifié pour être plus petit et aligné à droite -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:layout_marginStart="0dp">

        <ImageButton
            android:id="@+id/btnRemoveActe"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center|end"
            android:background="@drawable/fab_background2"
            android:src="@android:drawable/ic_delete"
            android:contentDescription="Supprimer un acte"
            android:padding="4dp" />
    </FrameLayout>
</LinearLayout>